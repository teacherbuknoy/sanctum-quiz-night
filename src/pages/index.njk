<form name="registration">
  <h2>Sign in as Admin</h2>
  <label for="auth_code">Authorization Code</label>
  <input type="password" required name="auth_code" id="auth_code">
  <button class="primary button">Join</button>
  <p style="text-align: center; grid-column: 1/-1">Or <button id="ui_link_leaderboards" type="button" class="link">just go to the leaderboards</button></p>
</form>

<script>
  const registration = document.forms['registration']
  const output = registration.elements['output']

  registration.addEventListener('submit', async event => {
    event.preventDefault()
    const authCode = registration
      .elements['auth_code']
      .value
      console
      .log({authCode})
    localStorage.setItem('sanctum_auth_code', authCode)
    const authorized = await window.checkAuth()

    if (authorized) {
      window
        .location
        .replace('/play')
    } else {
      alert("Incorrect authorization code")
    }
  })

  ui_link_leaderboards.addEventListener('click', e => {
    localStorage.removeItem('sanctum_auth_code')
    localStorage.removeItem('sanctum_auth_role')

    const a = document.createElement('a')
    a.href = '/play'
    a.click()
  })
</script>