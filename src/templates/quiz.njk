<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title | safe }}</title>
    {% include "meta/stylesheets.njk" %}
  </head>
  <body>
    <header class="admin commands">
      <button id="ui_show_answer">Show answers</button>
      <button id="ui_prev_question">&lt; Previous Question</button>
      <button id="ui_next_question">Next Question &gt;</button>
    </header>
    <main class="slide-container" id="ui_slide_container">
      <article class="slide slide--cover">
        {% include "ui/title-card.njk" %}
        <h2 class="title">{{ title }}</h2>
      </article>
      <article class="slide slide--question">
        <div class="question" data-quiz="question"></div>
        <div class="choices" data-quiz="choices">
          <button data-choice="a"></button>
          <button data-choice="b"></button>
          <button data-choice="c"></button>
          <button data-choice="d"></button>
        </div>
      </article>
    </main>
    <template id="ui_slide"></template>
    <script>
      window.questions = {{ questions | dump | safe }};
      console.log(window.questions)
    </script>
    <script src="/assets/scripts/quiz.js"></script>
  </body>
</html>